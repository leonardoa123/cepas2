<p style="color: green"><%= notice %></p>

<h1>Enologos</h1>

<%= link_to "Revistas", revistas_path, class: "btn btn-light bg-opacity-50 text-secondary", role: "button" %>
<%= link_to "Cargos", cargos_path, class: "btn btn-light bg-opacity-50 text-secondary", role: "button" %>

<div id="enologos">
  <% @enologos.each do |enologo| %>
    <%= render enologo %>
    <p>
      <%= link_to "Show this enologo", enologo %>
    </p>
  <% end %>
</div>

<%= link_to "New enologo", new_enologo_path %>
